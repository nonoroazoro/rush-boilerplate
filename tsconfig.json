{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "baseUrl": "packages",
        "paths": {
            "core": [
                "core/src"
            ],
            "ui": [
                "ui/src"
            ],
        }
    }
}
